<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  CARD -->
    <style name="QuizCard" parent="CardView">
        <item name="cardBackgroundColor">@color/quiz_grey_500</item>
        <item name="cornerRadius">1dp</item>
        <item name="elevation">10dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="maxLines">10</item>
    </style>

    <!-- BUTTONS -->
    <style name="QuizButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/quiz_blue</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--  GREETING -->
    <style name="QuizGreeting" parent="Widget.MaterialComponents.TextView">
        <item name="android:text">@string/quiz_greeting</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/quiz_grey_100</item>
        <item name="android:padding">10dp</item>
    </style>




    <!--  MENU  -->
    <style name="QuizMenuTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/quiz_grey_100</item>
        <item name="android:fontFamily">@font/press_start_2p</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="QuizMenuSubtitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/quiz_grey_100</item>
        <item name="android:fontFamily">@font/press_start_2p</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="QuizMenuGameStatistics" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/quiz_grey_100</item>
        <item name="android:fontFamily">@font/press_start_2p</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="QuizMenuButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/quiz_blue</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/press_start_2p</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">10dp</item>
    </style>



    <!-- SECRET MESSAGE CARD -->
    <style name="SecretMessageAuthor" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">40sp</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/quiz_grey_100</item>
        <item name="android:fontFamily">@font/press_start_2p</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="SecretMessageBody" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/quiz_grey_100</item>
        <item name="android:fontFamily">@font/noto_sans</item>>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">20</item>
    </style>
    <style name="SecretMessageButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/quiz_blue</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:text">Voltar ao Menu</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <!-- FINAL GAME -->
    <style name="QuizFinalMessage" parent="Widget.MaterialComponents.TextView">
        <item name="android:text">@string/quiz_answer_body</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/quiz_grey_100</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>


    <!--   QUESTION -->
    <style name="QuizAnswerBody" parent="Widget.MaterialComponents.TextView">
        <item name="android:text">@string/quiz_answer_body</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/quiz_grey_100</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- ALTERNATIVES -->
    <style name="QuizAlternatives" parent="Widget.MaterialComponents.TextView">
        <item name="android:text">@string/quiz_tutorial</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/quiz_grey_100</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:padding">12dp</item>
    </style>



    <!-- CHIP - ALTERNATIVE -->
    <style name="QuizChip" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:text">paksjhdflkasjhdflk</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:backgroundTint">@color/quiz_blue</item>
    </style>

</resources>