<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.QuestionFragment"
        android:background="@color/quiz_background_app"
        android:orientation="vertical">

        <include android:id="@+id/question"
            layout="@layout/question_item"/>

        <include android:id="@+id/answer_container"
            layout="@layout/single_answer_item"/>

        <include android:id="@+id/buttons"
            layout="@layout/question_buttons_item"/>
    </LinearLayout>
</layout>
